@model DepartmentRoleEntity;
@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Create Role";
}

<div class="container w-50">


	<div class="card">
		<div class="row g-0">
			<div class="card-header">
				<h3 class="text-center">Create Role for Cost Centers</h3>
			</div>
			<div class="card-body">
				<form asp-action="Create" method="post">



					<div class="row g-0 m-2">

						<label asp-for="Name" class="col-form-label col-2"></label>
						<div class="col-auto">
							<select asp-for="CostCenterId" class="form-select" asp-items="@ViewBag.CostCenters" placeholder="Role name" ></select>
						
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>



					<div class="row g-0 m-2">

						<label asp-for="Name" class="col-form-label col-2"></label>
						<div class="col-auto">
							<input asp-for="Name" class="form-control" placeholder="Role name" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>

					<div class="row g-0 m-2">

						<label asp-for="Description" class="col-form-label col-2"></label>
						<div class="col-auto">
							<textarea asp-for="Description" class="form-control" placeholder="Please enter description"></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>
					</div>
					<div class="row g-0 m-2">

						<label asp-for="CreatedBy" class="col-form-label col-2"></label>
						<div class="col-auto">
							<input asp-for="CreatedBy" value="USER_REQUIRED" readonly class="form-control" />
							<span asp-validation-for="CreatedBy" class="text-danger"></span>
						</div>
					</div>
					<div class="row g-0 m-2">

						<label asp-for="CreatedDate" class="col-form-label col-2"></label>
						<div class="col-auto">
							<input asp-for="CreatedDate" value="@DateTime.Now" readonly type="datetime" class="form-control" />
							<span asp-validation-for="CreatedDate" class="text-danger"></span>
						</div>
					</div>
					<div class="row g-0 m-2">

						<input type="submit" value="Add" class="btn btn-sm btn-outline-success" />
						<a asp-action="Index" class="btn btn-sm btn-outline-secondary mt-3">Show All Roles</a>
					</div>



				</form>
			</div>

			<div class="card-footer">

				<span class="text-muted">FOOTER TEXT IF REQUIRED</span>

			</div>

		</div>
	</div>
</div>