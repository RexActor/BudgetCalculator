<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BudgetCalculator</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BudgetCalculator.styles.css" asp-append-version="true" />
	<!-- Option 1: Include in HTML -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BudgetCalculator</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="StaffOrdering" asp-action="Index">Order Staff</a>
						</li>
						<li class="nav-item dropdown">

							<a class="nav-link text-dark dropdown-toggle" href="#" data-bs-toggle="dropdown" id="dropdownMenuLink" role="button" aria-expanded="false"><i class="bi bi-sliders"></i> Management</a>
							<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink" >

								<li class="dropdown-header text-center"><span class="fw-bold">Budget</span></li>
								<li><hr class="dropdown-divider" /></li>
								<li><a class="dropdown-item nav-link" asp-controller="Budget" asp-action="Index">Budgets </a></li>
								<li><a class="dropdown-item nav-link" asp-controller="Budget" asp-action="Create">Create </a></li>
								<li><a class="dropdown-item nav-link" asp-controller="Budget" asp-action="Weekly">View Week</a></li>



								<li class="dropdown-header text-center"><span class="fw-bold">Users</span></li>
								<li><hr class="dropdown-divider" /></li>
								<li><a class="dropdown-item nav-link">Access</a></li>




								<li class="dropdown-header text-center"><span class="fw-bold">Cost Centers</span></li>
								<li><hr class="dropdown-divider" /></li>
								<li><a class="dropdown-item nav-link" asp-controller="CostCenter" asp-action="Index">View</a></li>
								<li><a class="dropdown-item nav-link" asp-controller="CostCenter" asp-action="Create">Create</a></li>

								<li class="dropdown-header text-center"><span class="fw-bold">Roles</span></li>
								<li><hr class="dropdown-divider" /></li>
								<li><a class="dropdown-item nav-link" asp-controller="DepartmentRole" asp-action="Index">View Roles</a></li>
								<li><a class="dropdown-item nav-link" asp-controller="DepartmentRole" asp-action="Create">Create Role</a></li>



								<li class="dropdown-header text-center"><span class="fw-bold">Departments</span></li>
								<li><hr class="dropdown-divider" /></li>
								<li><a class="dropdown-item nav-link" asp-controller="Departments" asp-action="Index">Manage Departments</a></li>

							</ul>

						</li>
						
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="row g-0">
		<div class="col-md-2 d-none d-lg-block">
			<div class="container ">
				

			</div>


		</div>
		<div class="col-md-8">
			<div class="container">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</div>
		<div class="col-md-2 d-none d-lg-block">
			<div class="container sticky-top ">
				@if (IsSectionDefined("header"))
			{
				<div class="card me-3">
						<div class="card-header text-center">
							<h4>Menu</h4>
						</div>

						<div class="card-body">
							<div class="border-5 text-center" style="top:20px;">


								@RenderSection("header")

							</div>
						</div>
					</div>
			}
			</div>
		</div>
	</div>
	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - BudgetCalculator - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
