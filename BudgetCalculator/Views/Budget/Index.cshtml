@model IEnumerable<BudgetCalculator.Models.BudgetEntity>;


@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Budgets</h1>



<table class="table text-center">


	<thead class="table-dark">
		<tr>
			
			<th>Cost Center</th>
			<th>Department</th>
			<th>Year</th>

			<th class="text-end pe-5">Actions</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var budget in Model)
{
	<tr>
			
				<td>@budget.CostCenter.Name</td>
				<td>@budget.CostCenter.Department.Name</td>
				<td>@budget.Year</td>

				<td>
					<div class="float-end">
						<a class="btn btn-sm btn-outline-success shadow" asp-action="View" asp-controller="Budget" asp-route-year="@budget.Year" asp-route-CostCenterId="@budget.CostCenter.Id">View</a>
						<a class="btn btn-sm btn-outline-primary shadow" asp-action="Update" asp-controller="Budget" asp-route-year="@budget.Year" asp-route-CostCenterId="@budget.CostCenter.Id">Update</a>
						<a class="btn btn-sm btn-outline-danger shadow" asp-action="Delete" asp-controller="Budget" asp-route-year="@budget.Year" asp-route-CostCenterId="@budget.CostCenter.Id">Delete</a>
					</div>

				</td>
			</tr>

}


	</tbody>
	<tfoot class="footer text-center text-muted table-secondary">
		<tr>
			<td colspan="4">Auto Generated table</td>
		</tr>
	</tfoot>
</table>



@{
var controller = ViewContext.RouteData.Values["controller"];
}
@section header{


	<div class="text-white caption-top">
		<a asp-controller="@controller" asp-action="Create" class="btn  btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
	</div>
}
