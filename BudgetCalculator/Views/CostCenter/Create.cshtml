@model CostCenterEntityVM
@{

ViewData["Title"] = "Create Cost Center";
}

<div class="container w-50">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<h3 class="text-center">Create Cost Center</h3>
				</div>
				<div class="col-md-12">
					<form asp-action="Create" method="post">
						<div class="card-body">
							<div class="row m-2">
								<label asp-for="Name" class="col-form-label"></label>
								<input asp-for="Name" class="form-control" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="row m-2">
								<label asp-for="Description" class="col-form-label"></label>
								<input asp-for="Description" class="form-control" />
								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
							<div class="row m-2">
								<label asp-for="DepartmentId" class="col-form-label"></label>
								<select asp-for="DepartmentId" class="form-select" asp-items="@ViewBag.Departments">
									<option disabled selected>--SELECT--</option>


								</select>
								<span asp-validation-for="DepartmentId" class="text-danger"></span>
							</div>

							<div class="row m-2">
								<label asp-for="CreatedBy" class="col-form-label"></label>
								<input asp-for="CreatedBy" value="USER_REQUIRED" readonly class="form-control" />
								<span asp-validation-for="CreatedBy" class="text-danger"></span>
							</div>
						</div>
						<hr />
						<div class="card-body">
							<div class="row g-0">
								<input type="submit" class="btn btn-sm btn-outline-success" value="Create" />
								<a class="btn btn-sm btn-outline-secondary mt-2" asp-action="Index">Return</a>
							</div>
						</div>
					</form>
				</div>
				<div class="card-footer">
					<span class="text-muted">Create Cost Center</span>
				</div>
			</div>
		</div>
	</div>

</div>
